{
  "name": "lito-starter",
  "description": "A LitoJS boilerplate",
  "version": "0.1.0",
  "main": "apps/main.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.0",
    "install": "^0.13.0",
    "tailwindcss": "^3.4.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "tw:run": "bunx tailwindcss -i ./apps/globals.css -o ./public/globals.css --watch",
    "start": "concurrently \"bun tw:run\" \"bun run --watch apps/main.ts\""
  },
  "type": "module",
  "dependencies": {
    "@kitajs/html": "^4.2.4",
    "@kitajs/ts-html-plugin": "^4.1.0",
    "litojs": "../lito"
  }
}
